<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="198dp"
        android:background="@drawable/shape_login_layout"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/shape_input_layout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@mipmap/iconfont_user" />

            <EditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_input_layout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@mipmap/iconfont_password" />

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:inputType="textPassword" />
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_avator"
        android:layout_width="211dp"
        android:layout_height="108dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100.229dp"
        android:src="@mipmap/avator" />

    <LinearLayout
        android:id="@+id/layout_hand_hide"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="146.70dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_left_hand_hide"
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/left_hand" />

        <ImageView
            android:id="@+id/iv_right_hand_hide"
            android:layout_width="40dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/right_hand" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_hand_show"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="170dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_left_hand_show"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_marginRight="112dp"
            android:src="@mipmap/hand" />

        <ImageView
            android:id="@+id/iv_right_hand_show"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:src="@mipmap/hand" />
    </LinearLayout>


</FrameLayout>
